{
  "name": "sync-rules",
  "author": "Łukasz Jerciński",
  "license": "MIT",
  "version": "4.1.0",
  "description": "CLI tool to synchronize AI coding assistant rule files between projects.",
  "type": "module",
  "bin": {
    "sync-rules": "./bin/sync-rules"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jercik/sync-rules.git"
  },
  "homepage": "https://github.com/Jercik/sync-rules#readme",
  "bugs": "https://github.com/Jercik/sync-rules/issues",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "node dist/cli/main.js",
    "build": "tsc -p tsconfig.app.json",
    "clean": "rm -rf dist",
    "rebuild": "pnpm run clean && pnpm run build",
    "prepublishOnly": "pnpm run rebuild",
    "typecheck": "tsc -b --noEmit",
    "typecheck:app": "tsc -p tsconfig.app.json --noEmit",
    "typecheck:test": "tsc -p tsconfig.test.json --noEmit",
    "format": "prettier --write .",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "cli",
    "sync",
    "rules",
    "ai-coding-assistant"
  ],
  "files": [
    "bin/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "commander": "^14.0.0",
    "env-paths": "^3.0.0",
    "execa": "^9.6.0",
    "globby": "^14.1.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.31.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^24.0.15",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "prettier": "3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
