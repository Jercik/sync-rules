{
  "name": "sync-rules",
  "author": "Łukasz Jerciński",
  "license": "MIT",
  "version": "1.0.0",
  "description": "CLI tool to synchronize AI coding assistant rule files between projects.",
  "type": "module",
  "bin": {
    "sync-rules": "bin/sync-rules.ts"
  },
  "scripts": {
    "start": "node bin/sync-rules.ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "cli",
    "sync",
    "rules",
    "ai-coding-assistant"
  ],
  "dependencies": {
    "commander": "^14.0.0",
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "@types/tmp": "^0.2.6",
    "@vitest/coverage-v8": "^3.2.4",
    "prettier": "3.6.2",
    "tmp": "^0.2.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=23.6.0"
  }
}
