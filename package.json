{
  "name": "sync-rules",
  "author": "Åukasz JerciÅ„ski",
  "license": "MIT",
  "version": "5.1.0",
  "description": "CLI tool to synchronize AI coding assistant rule files between projects.",
  "type": "module",
  "bin": {
    "sync-rules": "bin/sync-rules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jercik/sync-rules.git"
  },
  "homepage": "https://github.com/Jercik/sync-rules#readme",
  "bugs": {
    "url": "https://github.com/Jercik/sync-rules/issues"
  },
  "scripts": {
    "start": "node bin/sync-rules",
    "build": "tsc -p tsconfig.app.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "rebuild": "pnpm run clean && pnpm run build",
    "prepublishOnly": "pnpm run rebuild",
    "knip": "knip",
    "typecheck": "tsc -b --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint",
    "fta:check": "fta-check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "commitlint:check": "commitlint --from HEAD~20 --to HEAD --verbose",
    "prepare": "husky"
  },
  "keywords": [
    "cli",
    "sync",
    "rules",
    "ai-coding-assistant"
  ],
  "files": [
    "bin/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "commander": "^14.0.2",
    "env-paths": "^3.0.0",
    "globby": "^16.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^25.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/eslint-plugin": "^1.5.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "fta-check": "^1.2.0",
    "fta-cli": "^3.0.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "knip": "^5.73.3",
    "prettier": "3.7.4",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "packageManager": "pnpm@10.25.0"
}
