{
  "name": "sync-rules",
  "author": "Åukasz JerciÅ„ski",
  "license": "MIT",
  "version": "5.1.0",
  "description": "CLI tool to synchronize AI coding assistant rule files between projects.",
  "type": "module",
  "bin": {
    "sync-rules": "./bin/sync-rules"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jercik/sync-rules"
  },
  "homepage": "https://github.com/Jercik/sync-rules#readme",
  "bugs": {
    "url": "https://github.com/Jercik/sync-rules/issues"
  },
  "scripts": {
    "start": "node bin/sync-rules",
    "build": "tsc -p tsconfig.app.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "rebuild": "pnpm run clean && pnpm run build",
    "prepublishOnly": "pnpm run rebuild",
    "knip": "knip",
    "typecheck": "tsc -b --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint",
    "fta:check": "fta-check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "commitlint:check": "commitlint --from HEAD~20 --to HEAD --verbose",
    "prepare": "husky"
  },
  "keywords": [
    "cli",
    "sync",
    "rules",
    "ai-coding-assistant"
  ],
  "files": [
    "bin/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "commander": "^14.0.0",
    "env-paths": "^3.0.0",
    "globby": "^14.1.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.31.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^24.0.15",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "fta-check": "^1.1.0",
    "fta-cli": "^3.0.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "knip": "^5.66.4",
    "prettier": "3.6.2",
    "semantic-release": "^25.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "packageManager": "pnpm@10.20.0"
}
